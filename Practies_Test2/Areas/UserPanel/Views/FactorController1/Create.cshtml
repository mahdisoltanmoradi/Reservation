@model Practies.DataLayer.Entities.FoodPrograms.Food
@using Practies.Core.Convertors

@{
    ViewData["Title"] = "Create";
}

<h2>رزرو غذا</h2>

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            سفارش غذا
        </div>
        <div class="panel-body">

                <dl class="dl-horizontal">
                    <dt>نام غذا :</dt>
                    <dd>@Model.FoodName</dd>
                    <dt>مبلغ غذا :</dt>
                    <dd>@Model.Price</dd>
                    <dt>تاریخ سرو غذا:</dt>
                    <dd>@Model.CreateDate.ToShamsi()</dd>
                    <dt></dt>
                    <dd>
                    
                        <a href="/UserPanel/Factor/CreateFactor/@Model.FoodId" class="btn btn-success">
                            ثبت سفارش
                        </a>
                    </dd>
                </dl>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

