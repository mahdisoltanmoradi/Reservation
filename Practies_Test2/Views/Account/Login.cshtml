@model Practies.Core.DTOs.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Practies</a></li>
            <li class="breadcrumb-item active" aria-current="page">ورود به سایت</li>
        </ul>
    </nav>
</div>

<main class="client-page">
    <div class="container-content">

        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success">
                ورود شما با موفقیت انجام شد
            </div>

            <script>
                //Yore delay in milliseconds
                var delay = 500;
                setTimeout(function () { window.location = "http://localhost:6616/UserPanel"; }, delay);
            </script>

        }
        @if (ViewBag.EditProfile==true)
        {
            <div class="alert alert-warning">
                بدلیل ویرایش اطلاعات پروفایل مجدد وارد شوید
            </div>
        }

        <header><h2> ورود به سایت </h2></header>

        <div class="form-layer">

            <form asp-action="Login" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input type="email" class="form-control" asp-for="Email" placeholder="ایمیل" aria-describedby="email-address">
                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input type="password" class="form-control" asp-for="Password" placeholder="رمز عبور " aria-describedby="email-address">
                </div>
                <div class="text-danger" asp-validation-summary="All">

                </div>

                <div class="remember-me">
                    <label><input type="checkbox" asp-for="RememberMe" name="">  مرا بخاطر بسپار </label>
                </div>

                <div class="link">
                    <a href="/ForgotPassword"> <i class="zmdi zmdi-lock"></i> رمز عبور خود را فراموش کرده ام !</a>
                    <a href="/Register"> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
                </div>
                <button class="btn btn-success"> ورود به سایت </button>

            </form>
        </div>

    </div>
</main>

