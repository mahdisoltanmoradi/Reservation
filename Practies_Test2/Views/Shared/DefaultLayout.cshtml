<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> تاپ لرن |  @ViewData["Title"]</title>
    <partial name="_Metatags" />
    <partial name="Style" />
    <script src="/js/jquery.min.js"></script>
    <link href="~/css/css/persian-datepicker.css" rel="stylesheet" />

</head>
<body>
    <script src="/js/modernizr-custom.js"></script>

    <div class="landing-layer">
        <div class="container">
            <nav>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <ul>
                            <li>
                                <a href=""> همکاری در فروش </a>
                                <a href=""> درباره ما </a>
                                <a href=""> تماس با ما </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="clientarea">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="loggein ">
                                    <i class="zmdi zmdi-account"></i><a href="/UserPanel">@User.Identity.Name  .خوش امدید  </a>
                                    <a href="/Logout"> خروج </a>
                                </div>

                            }
                            else
                            {
                                <div class="signin">
                                    <i class="zmdi zmdi-account"></i>
                                    <a href="/Login"> ورود </a> /
                                    <a href="/Register"> عضویت </a>

                                </div>
                            }

                        </div>
                    </div>
                </div>
            </nav>
            @RenderSection("Search", false)
        </div>
    </div>

    <!-- main manu -->
    @await Component.InvokeAsync("CourseGroupComponent")
    <!-- /main manu -->
    <!-- content -->
    @RenderBody();
    <!-- /content -->
    <!-- footer -->
    <partial name="_Footer" />
    <!-- /footer -->
    <script src="/AdminContent/js/jquery-1.10.2.js"></script>

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="~/js/js/persian-datepicker.js"></script>

    @*<script src="/js/jquery.validate.min.js"></script>
        <script src="/js/jquery.validate.unobtrusive.js"></script>*@
    @RenderSection("Scripts", false)

</body>
</html>

