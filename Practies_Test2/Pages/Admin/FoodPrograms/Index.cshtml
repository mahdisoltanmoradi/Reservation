@page
@using Practies.Core.Convertors
@model Practies_Test2.Pages.Admin.FoodPrograms.IndexModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست غذاهای دانشگاه</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست غذاها
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                       
                        <div class="col-md-6" style="margin:10px 0;">
                            <a asp-page="CreateFood" class="btn btn-outline btn-success">افزودن غذا</a>
                        </div>


                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام غذا</th>
                                    <th>تعداد غذا</th>
                                    <th>قیمت غذا</th>
                                    <th>تاریخ سرو غذا</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var food in Model.Foods)
                                {
                                    <tr>
                                        <td>@food.FoodName</td>
                                        <td>@food.Count</td>
                                        <td>@food.Price</td>
                                        <td>@food.CreateDate.ToShamsi()</td>
                                        <td>
                                            <a href="/Admin/FoodPrograms/EditFood/@food.FoodId" class="btn btn-warning btn-sm">ویرایش</a>
                                            <a href="/Admin/FoodPrograms/DeleteFood/@food.FoodId" class="btn btn-danger btn-sm">حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                   
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

